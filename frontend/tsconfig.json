{
  "compilerOptions": {
    "outDir": "../../dist",
    "target": "ES5",
    "module": "system",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./" 
  },
  "exclude": [
    "node_modules"
  ]
}
