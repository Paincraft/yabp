{
  "compilerOptions": {
    "outDir": "../../dist",
    "target": "ES5",
    "module": "system",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "d.ts",
    "typings/main",
    "typings/main.d.ts"
  ]
}
